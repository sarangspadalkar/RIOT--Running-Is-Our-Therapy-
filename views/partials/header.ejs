<header class="jumbotron">
    <div class="container-fluid ">
        <div class="row align-items-center ">
            <div class="col-sm-2">
                <a href="/" class="navbar-brand" style="color: white;">
                    <h2><i>R.I.O.T</i></h2>
                </a>
            </div>
            <div class="col-sm-5">
                <h2 class="text-left" style="color: white;"><i>Running Is Our Therapy</i> </h2>
            </div>
            <div class="col-sm-4 offset-md-1">
                <ul class="list-inline">
                    <li class="list-inline-item"><a href="/connection/newConnection" style="color: white;">Start a new
                            Connection <i class="fa fa-calendar" aria-hidden="true"></i>
                        </a></li>
                    <% if (currentUser) { %>
                        <li class="list-inline-item"><a href="/login/signout" style="color: white;">Sign Out <i
                                    class="fa fa-sign-out" aria-hidden="true"></i>
                            </a></li>
                        <li class="list-inline-item"><a href="/login/savedConnections" style="color: white;">My
                                Connections
                                <i class="fa fa-user" aria-hidden="true"></i>
                            </a></li>
                        <% } else { %>
                            <li class="list-inline-item"><a href="/login" style="color: white;">Login <i
                                        class="fa fa-sign-in" aria-hidden="true"></i></a></li>
                            <li class="list-inline-item"><a href="/signup" style="color: white;">Sign Up <i
                                        class="fa fa-user-plus"></i></a></li>
                            <% } %>
                </ul>
            </div>
        </div>
    </div>
    <div class="row justify-content-between">
        <div class="col-sm-4">
            <ul class="list-inline">
                <li class="list-inline-item"><a href="/" style="color: white;"><i class="fa fa-home"
                            aria-hidden="true"></i>
                        Home </a></li>
                <li class="list-inline-item"><a href="/connections" style="color: white;">All Connections <i
                            class="fa fa-calendar" aria-hidden="true"></i></a></li>
            </ul>
        </div>
        <% if (currentUser) { %>
            <div class="col-sm-4 ">
                <h4>Welcome <%=currentUser.firstName %>!</h4>
            </div>
            <% } %>
    </div>
</header>

